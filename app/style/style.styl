body
	margin 0

a
	cursor pointer
header
	width 100%
	height 100px
	background #3A1955
	#header
		height: 91px
		display -ms-flexbox
		display flex
		-ms-flex-pack center
		justify-content center
		.container
			padding-top 10px
			display -ms-flexbox
			display flex
			-ms-flex-pack center
			justify-content center
			max-width 1280px
			.logo
				display: flex
				margin-right: 40px
			.search
				width: 560px
				height: 40px
				border-radius: 8px
				background: #5d2f88
				display: flex
				align-items: center
				form
					display: flex
					align-items: center
					input
						width: 510px
						background: #5d2f88
						border 0
						color: #fff
						outline none
					input[type="text"]
						color: #fff
						font-family 'OpenSans-Light'
						font-size: 15px
						padding-left: 15px
						vertical-align: middle
						-webkit-appearance: none
						&:focus
							&::-webkit-input-placeholder
									color transparent
							&:-moz-placeholder
									color transparent
							&::-moz-placeholder
									color transparent
							&:-ms-input-placeholder
									color transparent
					::-webkit-input-placeholder
						color #fff

					::-moz-placeholder
						color #fff

					:-ms-input-placeholder
						color #fff

					:-moz-placeholder
						color #fff
					input[type="submit"]
						width 20px
						height 20px
						border none
						background url(../img/loop.svg) no-repeat 50% 50%
			.down-login
				display: flex
				align-items: center
				margin-left: 30px
				.download
					a
						font-size: 15px
						color: #f7941d
						font-family 'OpenSans-Light'
						&:hover
							color #fff
				.login
					display: flex
					align-items: center
					margin-left: 30px
					a
						font-size: 15px
						color: #fff
						font-family 'OpenSans-Light'
						svg
							margin-left: 5px
							margin-bottom: -3px
						&:hover
							color #f7941d
							path
								fill #f7941d
			.phone
				margin-left: 90px
				display: flex
				align-items: center
				a
					font-size: 18px
					color: #fff
					font-family 'PT-Sans-Regular'
	.zigzag
		background #3A1955
		position relative
		height 16px
		z-index 1
		&:before
			content ""
			display block
			position absolute
			left 0
			right 0
			height 44px
			top 9px
			background linear-gradient(-90deg, #5D2F88 8px, transparent 0) 0 8px, linear-gradient(90deg, #5D2F88 8px, transparent 0) 0px 17px
			background-position top left
			background-size 1px 16px
		&:after
			content ""
			display block
			position absolute
			left -6px
			right 0
			height 50px
			top 15%
			background linear-gradient(-132deg, #3A1955 8px, transparent 0) 0 13px, linear-gradient(132deg, #3A1955 8px, transparent 0) 0 0
			background-position top left
			background-repeat repeat-x
			background-size 18px 50px
	.container
		display -ms-flexbox
		margin auto
		max-width 1280px
		a.basket
			font-family 'OpenSans'
			cursor pointer
			display flex
			position relative
			color #fff
			height 44px
			padding-left 15px
			padding-right 61px
			background #ef4136
			align-items center
			text-align center
			margin 0 auto
			float right
			right 71.6px
			top -7px
			z-index 2
			&:hover
				background #e31508
			&:after
				content ""
				display block
				position absolute
				left 0
				right 0
				height 50px
				top -7px
				background linear-gradient(-132deg, #3A1955 8px, transparent 0) 0 13px, linear-gradient(132deg, #3A1955 8px, transparent 0) 0 0
				background-position top left
				background-repeat repeat-x
				background-size 18px 50px
			img
				position: absolute
				right: 15px
		.left-group-links
			position: relative
			display: flex
			height: 44px
			align-items: center
			text-align: center
			margin: 0 auto
			font-family: 'OpenSans-Light'
			color: #fff
			float: left
			top: -7px
			z-index: 2
			a
				margin-left: 30px
			a.catalog
				display: flex
				align-items: center
				flex-flow: row-reverse
				svg
					padding-top: 2px
					margin-right: 10px
				&:hover
					color #f7941d
					rect
						fill #f7941d
			a
				&:hover
					color #f7941d
			.vertical-line
				margin-left: 30px
				width: 1px
				height: 50%
				opacity: 0.5
				background: #776c81
				z-index: 50
				display: block
			p
				margin-left: 30px
				margin-right: 30px
				a
					margin: 0
					color: #f7941d
					text-decoration: underline
					&:hover
						color #fff
				span
					margin-right: 10px
					margin-left: 10px
					color: #fff
@import '/fonts.styl'
