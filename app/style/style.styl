body
	margin 0
	width: 100%
	overflow-x: hidden
	a
		cursor pointer
	header
		width 100%
		height 100px
		background #3A1955
		#header
			height: 91px
			display -ms-flexbox
			display flex
			-ms-flex-pack center
			justify-content center
			.container
				padding-top 10px
				display -ms-flexbox
				display flex
				flex-flow: row
				-ms-flex-pack center
				justify-content center
				max-width 1280px
				.logo
					display: flex
					margin-right: 40px
				.search
					width: 560px
					height: 40px
					margin-top: 22px
					border-radius: 8px
					background: #5d2f88
					display: flex
					align-items: center
					form
						display: flex
						align-items: center
						input
							width: 510px
							background: #5d2f88
							border 0
							color: #fff
							outline none
						input[type="text"]
							color: #fff
							font-family 'OpenSans-Light'
							font-size: 15px
							padding-left: 15px
							vertical-align: middle
							-webkit-appearance: none
							&:focus
								&::-webkit-input-placeholder
										color transparent
								&:-moz-placeholder
										color transparent
								&::-moz-placeholder
										color transparent
								&:-ms-input-placeholder
										color transparent
						::-webkit-input-placeholder
							color #fff

						::-moz-placeholder
							color #fff

						:-ms-input-placeholder
							color #fff

						:-moz-placeholder
							color #fff
						input[type="submit"]
							width 20px
							height 20px
							border none
							background url(../img/loop.svg) no-repeat 50% 50%
				.down-login
					display: flex
					align-items: center
					margin-left: 30px
					.download
						a
							font-size: 15px
							color: #f7941d
							font-family 'OpenSans-Light'
							&:hover
								color #fff
					.login
						display: flex
						white-space: nowrap
						align-items: center
						margin-left: 30px
						a
							font-size: 15px
							color: #fff
							font-family 'OpenSans-Light'
							svg
								margin-left: 5px
								margin-bottom: -3px
							&:hover
								color #f7941d
								path
									fill #f7941d
				.phone
					margin-left: 90px
					display: flex
					white-space: nowrap
					align-items: center
					a
						font-size: 18px
						color: #fff
						font-family 'PT-Sans-Regular'
		.zigzag
			background #3A1955
			position relative
			height 16px
			z-index 1
			top: 7px
			&:before
				content ""
				display block
				position absolute
				left 0
				right 0
				height 44px
				top 9px
				background linear-gradient(-90deg, #5D2F88 8px, transparent 0) 0 8px, linear-gradient(90deg, #5D2F88 8px, transparent 0) 0px 17px
				background-position top left
				background-size 1px 16px
			&:after
				content ""
				display block
				position absolute
				left -6px
				right 0
				height 50px
				top 15%
				background linear-gradient(-132deg, #3A1955 8px, transparent 0) 0 13px, linear-gradient(132deg, #3A1955 8px, transparent 0) 0 0
				background-position top left
				background-repeat repeat-x
				background-size 18px 50px
.container
	display flex
	flex-flow: row-reverse
	margin 0 auto
	max-width 1280px
	a.basket
		font-family 'OpenSans'
		cursor pointer
		display flex
		position relative
		color #fff
		height 44px
		padding-left 15px
		padding-right 61px
		background #ef4136
		align-items center
		text-align center
		margin 0 auto
		float right
		right 71.6px
		top 0
		z-index 2
		&:hover
			background #e31508
		&:after
			content ""
			display block
			position absolute
			left 0
			right 0
			height 50px
			top -7px
			background linear-gradient(-132deg, #3A1955 8px, transparent 0) 0 13px, linear-gradient(132deg, #3A1955 8px, transparent 0) 0 0
			background-position top left
			background-repeat repeat-x
			background-size 18px 50px
		img
			position: absolute
			right: 15px
	.left-group-links
		position: relative
		display: flex
		height: 44px
		align-items: center
		text-align: center
		margin: 0 auto
		font-family: 'OpenSans-Light'
		color: #fff
		float: left
		top: 0
		z-index: 2
		a
			margin-left: 30px
		a.catalog
			display: flex
			align-items: center
			flex-flow: row-reverse
			svg
				padding-top: 2px
				margin-right: 10px
			&:hover
				color #f7941d
				rect
					fill #f7941d
		a
			&:hover
				color #f7941d
		.vertical-line
			margin-left: 30px
			width: 1px
			height: 50%
			opacity: 0.5
			background: #776c81
			z-index: 50
			display: block
		p
			margin-left: 30px
			margin-right: 30px
			a
				margin: 0
				color: #f7941d
				text-decoration: underline
				&:hover
					color #fff
			span
				margin-right: 10px
				margin-left: 10px
				color: #fff
#slider
	max-height 425px
	.slide-present
		margin 0 auto
		align-items: center
		display flex !important
		justify-content center
		img
			width 100%
			max-height 425px
	.slider-content
		margin-top 30px
		position absolute
		text-align center
		img
			width 764px
			height: 190px
		p
			width 278px
			height 65px
			opacity 0.8
			color #fff
			font-family 'Roboto-Light'
			font-size 20px
			font-weight 100
			margin 0 auto
// --FOR-SLIDER--
.prev-head-slider
	cursor pointer
	img
		top 60%
		z-index 2
		width 12.12px
		height 22.64px
		margin-left 68px
		display block
		position absolute

.next-head-slider
	cursor pointer
	img
		top 60%
		z-index 2
		right 0
		width 12.12px
		height 22.64px
		margin-right 68px
		display block
		position absolute

.slick-dots
	display flex
	margin-top -35px
	justify-content center

.pager
	width 20px
	height 1.5px
	opacity 0.19
	position absolute
	background-color #fff

.slick-active
	.pager
		opacity 1
		border-radius 15px
		background-color #fff

ul,li
	list-style-type none
	display inline
	margin-right 25px

footer
	width: 100%
	height: auto
	background: #3A1955
	.container
		height: 229px
		margin: 0 auto
		max-width: 1280px
		display: block
		.footer-up
			background: #3A1955
			.logo
				padding-top: 40px
				width: 110px
				height: 32px
				img
					width: 100%
			.footer-left
				float: left
				.links-block
					margin-top: 30px
					width: 270px
					display: flex
					.left
						color: #fff
						font-size: 14px
						margin-right: 45px
						text-decoration: underline
						font-family 'OpenSans-Light'
					.right
						color: #fff
						font-size: 14px
						text-decoration: underline
						font-family 'OpenSans-Light'
			.footer-right
				float: right
				display: block
				padding-top: 40px
				.tel
					color: #fff
					font-size: 22px
					text-decoration: none
					font-family 'OpenSans-Bold'
				.mail
					color: #fff
					font-size: 14px
					text-decoration: underline
					font-family 'PT-Sans-Regular'
				.cards
					width: 192px
					height: 34px
					img
						width: 100%

	.footer-down
		width: 100%
		height: 7vw
		background-size: cover
		background-repeat: no-repeat
		background-image: url(../img/footer-back.jpg)
@import '/fonts.styl'
